# Server Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGO_URL=mongodb://localhost:27017/lms-ebn
MONGO_URL=mongodb://localhost:27017/lms-ebn

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Client Configuration
CLIENT_URL=http://localhost:5173

# API Configuration
API_BASE_URL=http://localhost:5000

# Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp

# Socket.io Configuration
SOCKET_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Security Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:5174

# Production URLs (update when deploying)
PRODUCTION_CLIENT_URL=https://your-domain.com
PRODUCTION_API_URL=https://api.your-domain.com

